<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#217dfb"
        android:minHeight="56dp"></android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="26dp"
            android:src="@drawable/icon_calendar" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51dp"
            android:layout_marginTop="29dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/kor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="75dp"
            android:text="간장"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="98dp"
            android:text="(Urobilinogen)"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="217dp"
            android:layout_marginTop="81dp"
            android:textColor="#217dfb"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="293dp"
            android:layout_marginTop="73dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"/>

        <ImageView
            android:id="@+id/color"
            android:layout_width="40dp"
            android:layout_height="13dp"
            android:layout_marginLeft="288dp"
            android:layout_marginTop="98dp"
            android:background="#dce977" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/icon_weight" />

        <TextView
            android:id="@+id/doctorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="150dp"
            android:textSize="12sp" />

        <android.support.v7.widget.CardView
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="172dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="종합의견"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pretext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="84dp"
                android:layout_marginTop="38dp"
                android:textColor="#959595"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/preicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="15dp" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>